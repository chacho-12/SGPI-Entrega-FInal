@model SGPI.Models.Usuario


@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutSGPI";
}

<br />
<br />
<body style="background-color:#b9c1ca;">
    <center><h1>Login</h1></center>

    <form method="post">
        <center>
            <div class="form-group">
                <label for="usuariotxt">Usuario:</label>
                <input asp-for="NumeroDocumento" type="text" class="form-control col-sm-3" id="usuariotxt" placeholder="Ingrese Usuario">

            </div>

            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input asp-for="Password" type="password" class="form-control col-sm-3" id="password" placeholder="Ingrese la Contraseña">
            </div>

            <a href="/Administrador/OlvidarContraseña" id="Recuperarcontraseña">¿Olvidaste la contraseña?</a>
            <br />
            <br />
            <a href="#"><input class="btn btn-success" id="IngresarButton" type="submit" value="Ingresar"></a>
            <br />
            <br />
        </center>
    </form>
    @if (ViewBag.mensaje != null)

    {
        <center>
            <div class="alert alert-danger" role="alert" style="widh:300px;">
                <h5>@ViewBag.mensaje</h5>
            </div>
        </center>
    }
</body>
