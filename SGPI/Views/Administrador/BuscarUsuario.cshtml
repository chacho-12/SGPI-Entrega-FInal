@model SGPI.Models.Usuario

@{
    ViewData["Title"] = "BuscarUsuario";
}
<body style="background-color:#b9c1ca;">
    <center><h1>Buscar Usuario</h1></center>
    <br />
    <nav class="navbar navbar-expand-sm bg-primary navbar-dark justify-content-center" style="">

        <ul class="navbar-nav">

            <li class="nav-item active">
                <a class="nav-link text-black"
                   href="/Administrador/CrearUsuario">Crear Usuario</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-black" style="background-color:white" href="/Adminstrador/BuscarUsuario">Buscar Usuario</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-black" href="/Administrador/ModificarUsuario">Modificar Usuario </a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-black" href="/Administrador/Reportar"> Reportes </a>
            </li>

        </ul>

    </nav>
    <br />
    <br />
    <div class="row">
        <div style="text-align:right">
            <a href="/Administrador/Login" id="regresar">
                Cerrar sesion
            </a>
        </div>
    </div>
    <div class="row">

        <!--Nombre-->
        <div class="col-sm-4 justify-content-md-center align-items-center h-100">


            <br />
            <h4> Buscar Usuario </h4>



        </div>
        <div class="tab-content">

            <form method="post">

                <div class="input-group">

                    <input asp-for="NumeroDocumento" type="text" style="width : 350px" id="Buscar Usuriotxt" placeholder="Ingresar Usuario">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button id="ingresarbtn" type="submit" class="btn btn-outline-primary"> Buscar Usuario </button>
                </div>
                <br />
                <br />
                @if (ViewBag.mensaje != null)
                {
                   <center>
                       <div class="alert alert-danger aler-dismissible fade show" role="alert" style="width:700px;">
                           @ViewBag.mensaje
                       </div>


                   </center>


                }
                <!--------tabla------->
                @if (Model != null)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model=>model.PrimerNombre)</th>
                                <th>@Html.DisplayNameFor(model=>model.PrimerApellido)</th>
                                <th>@Html.DisplayNameFor(model=>model.SegundoApellido)</th>
                                <th>@Html.DisplayNameFor(model=>model.NumeroDocumento)</th>
                                <th>@Html.DisplayNameFor(model=>model.Email)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(modelItem=>modelItem.PrimerNombre)</td>
                                <td>@Html.DisplayFor(modelItem=>modelItem.PrimerApellido)</td>
                                <td>@Html.DisplayFor(modelItem=>modelItem.SegundoApellido)</td>
                                <td>@Html.DisplayFor(modelItem=>modelItem.NumeroDocumento)</td>
                                <td>@Html.DisplayFor(modelItem=>modelItem.Email)</td>
                                <td>@Html.ActionLink("ModificarUsuario","ModificarUsuario", new{Idusuario=Model.Idusuario})</td>
                                <td>@Html.ActionLink("Delete","Delete", new{Idusuario=Model.Idusuario}, new{onclick="return confirm('¿Está seguro que desea eliminar?');"})</td>
                            </tr>
                        </tbody>
                    </table>
                }
            </form>
        </div>
    </div>
</body>