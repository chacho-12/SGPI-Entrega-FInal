@model SGPI.Models.Pago
@{
    ViewData["Title"] = "Pagos";
}


<body style="background-color:#b9c1ca;">

    <center><h1>Pagos</h1></center>
    <br />
    <!--barra para todas las vistas-->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark justify-content-center">
        <ul class="navbar-nav">

            <li class="nav-item">
                @Html.ActionLink("ActualizarEstudiante", "ActualizarEstudiante", new {IdUsuario = ViewBag.idusuario})
            </li>
            <li class="nav-link" href="">
                <a class="nav-link" href=""></a>
            </li>

            <li class="nav-item">
                @Html.ActionLink("Pagos", "Pagos", new {IdUsuario = ViewBag.idusuario})

            </li>
        </ul>
    </nav>
    <br>
    <br>
    <div class="row">
        <div style="text-align:right">
            <a href="/Administrador/Login" id="regresar">
                Cerrar sesion
            </a>
        </div>
    </div>
    <form method="post">
        <div class="tab-content">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Valor pago</th>
                        <th>Fecha pago</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input asp-for="ValorPago" type="number" class="form-control col-sm-3" id="Pago" required></td>
                        <td><input asp-for="Fecha" type="date" class="form-control col-sm-3" id="Fecha" required></td>
                        <td><input type="file" class="form-control col-sm-1" id="Archivo"></td>
                        <td>

                            <div class="col">

                                <button id="buscarbtn" type="submit" class="btn btn-outline-success col-lg-5" style="width:100px; height:40px;"> Pagar </button>
                            </div>
                        </td>



                    </tr>
                </tbody>
            </table>



        </div>

        <br><br>
        @if (ViewBag.mensaje != null)
        {
            <center>
                <div class="alert alert-success" role="alert" style="width:400px">
                    @ViewBag.mensaje
                </div>
            </center>
        }
    </form>
</body>